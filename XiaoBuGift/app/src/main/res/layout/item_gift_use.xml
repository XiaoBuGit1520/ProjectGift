<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_gift_use_cover_image_url"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_gift_use_short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最文艺的实用设计" />

    <TextView
        android:id="@+id/tv_gift_use_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文艺小清新北极熊钥匙圈" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_gift_use_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff2d47"
        android:text="25RMB" />


</LinearLayout>
